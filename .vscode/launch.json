{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "${workspaceFolderBasename}", //名称
            "type": "cppdbg", //调试类型，除使用msvc进行调试外，均为该类型
            "request": "launch",
            "program": "${workspaceFolder}/bin/${workspaceFolderBasename}.exe", //指定C/C++程序位置
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}", //指定工作目录
            // "command": "${workspaceFolder}/cmake_build.bat ",
            "preLaunchTask": "CMake: build", //在调试前会先调用build_debug这个task编译构建程序
            "environment": [],
            "externalConsole": false,
            "osx": 
            { 
                "MIMode": "lldb" //指定使用lldb进行调试
            },
            "linux": 
            { 
                "MIMode": "gdb", //指定使用gdb调试
                "setupCommands": 
                [
                    {
                        "description": "Enable pretty-printing for gdb",
                        "text": "-enable-pretty-printing",
                        "ignoreFailures": true
                        
                    }
                ]
            },
            "windows": { 
                "MIMode": "gdb", //指定使用gdb调试
                "program": "${workspaceFolder}/bin/${workspaceFolderBasename}.exe", //指定C/C++程序位置
                "setupCommands": 
                [
                    {
                        "description": "Enable pretty-printing for gdb",
                        "text": "-enable-pretty-printing",
                        "ignoreFailures": true
                    }
                ]
            }
        }
    
    ]
}